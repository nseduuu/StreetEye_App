<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Crossolution.Views.Usuarios.LoginView"
             BackgroundColor="White"
             Title="LoginView">
    <ScrollView>

        <VerticalStackLayout Padding="25" Spacing="30" HorizontalOptions="Center">

            <Image
                Source="crossolution.png"
                HeightRequest="150"  
                WidthRequest="150"/>

            <VerticalStackLayout>
                <Label
                Text="Crossolution"
                FontSize="Medium"
                TextColor="Black"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
            </VerticalStackLayout>

            <Entry Placeholder="ex: lucasfelix@crossolution" TextColor="Black" Text="{Binding Login}"/>

            <Entry Placeholder=" ******** " TextColor="Black" Text="{Binding Senha}"/>


            <Button
            x:Name="LoginButton"
            BackgroundColor="Black"
            Padding="60,0,60,0"
            Text="Login" 
            TextColor="White"
            Command="{Binding AutenticarCommand}"
            HorizontalOptions="Center" />
        
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>