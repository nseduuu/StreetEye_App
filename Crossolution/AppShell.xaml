<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Crossolution.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Crossolution"
    xmlns:Views="clr-namespace:Crossolution.Views"
    BackgroundColor="White"
    Shell.FlyoutBehavior="Flyout"
    Title="Crossolution">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent 
        Title="Cadastro"
        ContentTemplate="{DataTemplate Views:Cadastro}"
        Route="Cadastro"/>
    <ShellContent 
        Title="Login"
        ContentTemplate="{DataTemplate Views:Login}"
        Route="Login"/>
    <ShellContent
        Title="Semaforos"
        ContentTemplate="{DataTemplate Views:Semaforos}"
        Route="Semaforo"/>

</Shell>
